{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/OpenGLFunc/OpenGLUtils.cpp",
                "src/2DGraphics/Window.cpp",
                "src/Simulations/GravityParticles.cpp",
                "src/Simulations/FullSimulation.cpp",
                "-o",
                "bin/main",
                "-lGL",
                "-lGLEW",
                "-lglfw",
                "-lsfml-graphics", 
                "-lsfml-window", 
                "-lsfml-system",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}